@import '/towxml/style/main.wxss';
@import '/towxml/style/theme/light.wxss';
@import '/towxml/style/theme/dark.wxss';
.class_list image {
  width: 50rpx;
  height: 50rpx;
}

.class_list {
  font-size: 28rpx;
  display: flex;
  border: 1px solid #cdcdcd;
  border-radius: 30rpx;
  width: 174rpx;
  padding: 0 13rpx 0 13rpx;
  margin-left: 12rpx;
  margin-bottom: 30rpx;

}
.class_list view {
  line-height: 35px;
}
.hidden{
  transform:translateX(80%);
  transition:all 0.5s ease 0.2s;
  /* background: linear-gradient(to top, rgba(255,255,255,1), rgba(255,255,255,0));  */

}
.isShow{
  transform:translateX(0);
  transition:all 0.5s ease 0.2s;
}
.lists{
  position: fixed;
  top:0;
  left:0;
  background: #fff;
  font-size: 25rpx;
  width: 80%;
}
.lists .bottom image{
  width: 45rpx;
  height: 45rpx;
  margin: 0;
}
.lists .bottom{
  line-height: 22px;
  display: flex;
  margin-left: 30rpx;
}
/* .hidden2{
  display: none;
} */
.isShow3{
  background-color: #ffffff;
}
.lists .bottom .two{
  padding-left: 30rpx;
}
.back{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 80%;
  top: 0%;
  background-color:  rgba(0, 0, 0, 0.5);
  z-index: 999;
  transition:all 0.7s ease 0.5s;

}
